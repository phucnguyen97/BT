<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.home.phuc.bt_edittext.MainActivity"
    android:weightSum="1">
<ImageView
    android:src="@drawable/ic_person_black_24dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_weight="0.38" />

    <EditText

        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background=""
        android:drawableRight="@drawable/ic_account_circle_black_24dp"

        android:drawablePadding="10dp"
        android:hint="Username"
        android:textColorHint="#ebf1f1" />
    <EditText
        android:id="@+id/editTextPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
        android:hint="PasWord"
        android:textColorHint="#ffffff"

        />
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_email_black_24dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:hint="Phone"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/editTextZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:hint="Zip"
            android:textColorHint="#FFFFFF" />

    </LinearLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center">

        <RadioGroup
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <RadioButton
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="Male"
                android:textColorHint="#FFFFFF"
                android:buttonTint="#FFFFFFF"/>

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="Female"
                android:textColorHint="#FFFFFF"
                android:buttonTint="#FFFFFFF"

            android:layout_weight="0.75" />


            />

        </RadioGroup>
    </RelativeLayout>
    <CheckBox
        android:buttonTint="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Newsletter subscription"
        android:textColorHint="#FFFFFF"
        />
    <CheckBox
        android:buttonTint="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Allow email from other"
        android:textColorHint="#FFFFFF"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            />
        <Button
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            />






    </LinearLayout>


</LinearLayout>
